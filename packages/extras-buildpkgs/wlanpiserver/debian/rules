#!/usr/bin/make -f
# You must remove unused comment lines for the released package.
export DH_VERBOSE = 1
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

PKG_PREFIX=debian/wlanpiserver
PKG_CONF_DIR=$(PKG_PREFIX)/etc/wlanpiserver
PKG_BIN_DIR=$(PKG_PREFIX)/usr/bin

%:
	dh $@

override_dh_auto_install:
	mkdir -p $(PKG_CONF_DIR) $(PKG_BIN_DIR)
	cp -r conf default dhcp network scripts sysctl ufw $(PKG_CONF_DIR)
	cp -r README.md version.txt $(PKG_CONF_DIR)
	install -o root -g root -m 744 server_switcher $(PKG_BIN_DIR)
	dh_auto_install

